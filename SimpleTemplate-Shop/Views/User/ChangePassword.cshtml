@model ChangePasswordViewModel

@{
    ViewBag.Title = "Control panel: Изменить пароль";
    Layout = "_AdminLayout";
}

<p class="text-center" style="font-size:2em; font-weight:bolder;">
    Account:
    <span class="badge badge-pill badge-light" style="font-size:1em;">@Model.Email</span>
</p>

<div class="container mt-5">
    <div class="card text-center m-2 p-2">
        <form asp-action="ChangePassword" asp-controller="User" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Email" />

            <div class="form-group">
                <label asp-for="OldPassword" class="float-left" style="font-size:1.7em;">Old password:</label>
                <input type="password" asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword" class="float-left" style="font-size:1.7em;">New password:</label>
                <input type="password" asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <hr />

            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-success" style="font-size:1.3em;" />
                <a asp-controller="User" asp-action="Index" class="btn btn-primary" style="font-size:1.3em;">Назад</a>
            </div>

        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}