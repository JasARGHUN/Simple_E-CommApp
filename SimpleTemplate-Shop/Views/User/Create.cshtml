@model CreateUserViewModel

@{ 
    ViewBag.Title = "Add User";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <p class="mt-3 text-center" style="font-size:2em; font-weight:bolder; text-decoration-line:underline;">Add User</p>
    <div class="card text-center m-2 p-2">
        <form asp-action="Create" asp-controller="User" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" style="font-size:1.5em;" class="float-left">Account:</label>
                <input type="text" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label float-left" style="font-size:1.5em;">Password:</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <hr />

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success" style="font-size:1.3em;"/>
                <a asp-controller="User" asp-action="Index" class="btn btn-primary" style="font-size:1.3em;">Back</a>
            </div>

        </form>
    </div>
</div>