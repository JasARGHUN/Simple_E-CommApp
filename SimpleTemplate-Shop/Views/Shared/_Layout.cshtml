<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/images/shop-icon-png.jpg" type="image/x-icon">
    <title>@await Component.InvokeAsync("AppName")</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" asp-href-include="/lib/fontawesome/css/*.css" />
    <link href="~/css/fontawesome.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>                                                                                                                                                                                                                                                                                                                                                                     
<body>
    <header>
        
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top"
             style="z-index:100;">
            @await Component.InvokeAsync("InfoLogo")
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Product" asp-action="List" style="font-size:1.8em;">Services</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" style="font-size:1.8em;">About us</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contacts" style="font-size:1.8em;">Contacts</a>
                    </li>
                </ul>

                <div class="d-inline my-2 my-lg-0 mr-3">
                    @await Component.InvokeAsync("CartSummary")
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-5">
        <br />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
     </div>



    <footer class="border-top footer" style="background-color:whitesmoke; font-size:1.3em; z-index:100;">
        <div class="container">
            &copy; 2020 - @await Component.InvokeAsync("AppName")
            <div style="float:right">@await Component.InvokeAsync("SocialAddress")</div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
