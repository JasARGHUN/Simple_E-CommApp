@model LoginModel

@{
    ViewBag.Title = "Войти в панель администратора";
    Layout = "_AdminLayout";
}

<br />
<div class="container mt-5">
    <br />
    <div class="card m-2 p-2">
        <div class="text-danger" asp-validation-summary="All"></div>
        <form asp-action="Login" asp-controller="Account" method="post" class="m-2 p-2">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <h3>Логин</h3>
                <div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <h3>Пароль</h3>
                <div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="text-center">
                <button class="btn btn-success" style="font-size:1.6em" type="submit">Войти</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary" style="font-size:1.6em">
                    Отмена
                </a>
            </div>
        </form>
    </div>
</div>
