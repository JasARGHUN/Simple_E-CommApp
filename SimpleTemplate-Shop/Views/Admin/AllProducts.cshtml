@model ReflectionIT.Mvc.Paging.PagingList<SimpleTemplate_Shop.Models.Product>


@{
    ViewBag.Title = "All Products";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <div>
        <div class="row">
            <div class="col-6">
                <h2>
                    Products
                </h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Upsert" class="btn btn-sm btn-outline-success">
                    <i class="fas fa-plus"></i>
                    Add Product
                </a>
            </div>
        </div>
        <div class="p-2 border rounded">
            <table id="tblData" class="table table-striped table-bordered" style="width:100%">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            ProductID
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Manufacturer
                        </th>
                        <th>
                            ProductPrice
                        </th>
                        <th>
                            Category
                        </th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <a asp-action="Index" class="btn btn-primary mt-1" style="font-size:1.7em;">Control Panel: Products</a>
</div>

@section Scripts{
    <script src="~/js/Product.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
}