@model CartIndexViewModel
@{
    ViewBag.Title = "Cart";
}

<br />
<div class="container mt-5">
    <h3 class="text-center m-2" style="font-size:2.6em; text-decoration-line:underline;">Your cart</h3>

    <div class="card border-0">

        @foreach (var line in Model.Cart.Lines)
        {
            <div class="container">
                <div class="row border mt-2 p-2" style="box-shadow:1px 1px 4px #000000;">
                    <div class="col">
                        <img src="@line.Product.Image" asp-append-version="true" alt=""
                             style="height:140px; width:140px;" />
                    </div>
                    <div class="col p-2">

                        <h4 class="card-title" style="font-size:2.6em;">@line.Product.Name</h4>
                        <p class="card-text" style="font-size:2.2em;">
                            @line.Quantity x @line.Product.ProductPrice
                            <strong class="ml-1">
                                Total: @(line.Quantity * line.Product.ProductPrice)
                            </strong>
                        </p>

                        <div class="float-right">
                            <a asp-action="Plus" asp-route-productId="@line.Product.Id"
                               class="btn btn-success" style="font-size:1.8em;">
                                <i class="fas fa-plus"></i>
                            </a>
                            <a asp-action="Minus" asp-route-productId="@line.Product.Id"
                               class="btn btn-danger" style="font-size:1.8em;">
                                <i class="fas fa-minus"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="mt-3 mb-1">
            <span class="badge badge-warning float-right" style="font-size:2.3em; font-weight:bolder;">
                Total cost: @Model.Cart.ComputeTotalValue().ToString("c")
            </span>
        </div>

        <hr />
        <div class="text-center">
            <a class="btn btn-primary float-left" asp-action="List" asp-controller="Product" style="font-size:1.7em;">Back</a>
            <a class="btn btn-success float-right" asp-action="Checkout" asp-controller="Order" style="font-size:1.7em;">Checkout</a>
        </div>
    </div>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}