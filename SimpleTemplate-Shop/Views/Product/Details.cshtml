@model Product
@{
    ViewBag.Title = "Product Details";
}

<br />
<div class="container mt-5">
    <div class="row justify-content-center" style="min-height:100vh;">
        <div class="col-sm-10">
            <form id="@Model.Id" asp-action="AddToCart"
                  asp-controller="Cart" method="post">
                <input type="hidden" asp-for="@Model.Id" />

                <div class="d-inline-flex">
                    <a asp-action="List" asp-controller="Product" class="m-2"
                       style="margin-top:1.4px; border:none; outline:none;">
                        <i class="fas fa-reply" style="font-size:2.3em; color:red;"></i>
                    </a> <p style="font-size:2.1em;">|</p>
                    <h3 class="mt-1 ml-2" style="text-decoration:underline; font-size:2.3em;">@Model.Category / @Model.Name</h3>
                </div>

                <div class="row m-2 p-2" style="background-color:aliceblue; box-shadow: 2px 2px 7px #000000;">
                    <div class="col-sm p-2">

                        <div id="carouselExampleIndicators" class="carousel slide mb-2" data-ride="carousel">

                            <div class="mb-2">
                                @if (Model.QuantityInStock != 0)
                                {
                                    <span class="badge badge-warning border" style="font-size:1.5em; float: left; cursor:pointer;">In stock</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary border" style="font-size:1.5em; float: left; cursor:pointer;">Out of stock</span>
                                }

                                <span class="badge badge-danger border" style="font-size: 1.5em; float: right; cursor:pointer;">Price: @Model.ProductPrice</span>
                            </div>

                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            </ol>

                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="@Model.Image" asp-append-version="true" class="d-block w-100 imageSize" alt="">
                                </div>
                            </div>
                        </div>

                        <div class="row">

                            <div class="col-6 col-sm-6 col-md-8">
                                <h4 class="mt-2">@Model.Manufacturer</h4>
                                <h5 class="mb-2">Production date: @Model.DateOfManufacture</h5>
                            </div>

                            <div class="col-6 col-md-4 text-right">
                                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

                                @if (Model.QuantityInStock == 0)
                                {
                                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModal">
                                        <i class="fa fa-cart-plus" aria-hidden="true" style="font-size:3.5em;"></i>
                                    </button>

                                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close border-dark btn-danger" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body text-center">
                                                    <p style="font-size:2.2em;">Sorry, this item is out of stock</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    @section Scripts{
                                        <script>
                                            $('#myModal').on('shown.bs.modal', function () {
                                                $('#myInput').trigger('focus')
                                            })
                                        </script>
                                    }
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-success">
                                        <i class="fa fa-cart-plus" aria-hidden="true" style="font-size:3.5em;"></i>
                                    </button>
                                }

                            </div>

                        </div>
                        <hr />
                    </div>

                    <div class="col-sm mt-3">
                        <h2 class="text-center">Description</h2>
                        <br />
                        <p class="card-text mb-2" style="font-size:1.5em;">
                            @Html.Raw(Model.ProductDescription)
                        </p>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
