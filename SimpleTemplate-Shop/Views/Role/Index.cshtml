@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "Панель ролей";
    Layout = "_AdminLayout";
}

<br />
<div class="container">
    <br />

    <p class="mt-3 text-center" style="font-size:2em; font-weight:bolder; text-decoration-line:underline;">
        Список ролей
    </p>

    <div class="card m-2 p-2">

        <table class="table" style="font-size:1.5em;">
            <thead>
                <tr>
                    <th scope="col">Роль</th>
                    <th class="text-right" scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td class="text-right">
                            <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-danger" style="font-size:1em;" onclick="return confirm('Delete: @role.Name?')">
                                    Удалить
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center">
            <a asp-action="Create" class="btn btn-success" style="font-size:1.3em;">Добавить роль</a>
            <a asp-action="UserList" class="btn btn-warning" style="font-size:1.3em;">Изменить права доступа пользователей</a>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-primary" style="font-size:1.3em;">Отмена</a>
        </div>
    </div>
</div>
