@model string

@{
    ViewBag.Title = "Add Role";
    Layout = "_AdminLayout";
}

<br />
<div class="container mt-5">
    <p class="mt-3 text-center" style="font-size:1.9em; font-weight:bolder; text-decoration-line:underline;">Add Role</p>
    <div class="card m-2 p-2">
        <div class="text-center m-2 p-2">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label class="float-left" for="name" style="font-size:1.5em;">Role name:</label>
                    <input name="name" class="form-control" />
                </div>
                <hr />

                <div class="form-group">
                    <button type="submit" class="btn btn-success" style="font-size:1.3em;">Add</button>
                    <a asp-action="Index" class="btn btn-primary" style="font-size:1.3em;">Back</a>
                </div>

            </form>
        </div>
    </div>
</div>