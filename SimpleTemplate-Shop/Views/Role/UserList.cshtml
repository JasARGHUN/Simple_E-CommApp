@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewBag.Title = "User List";
    Layout = "_AdminLayout";
}

<br />
<div class="container m2- p-2">

    <p class="mt-3 text-center" style="font-size:1.9em; font-weight:bolder; text-decoration-line:underline;">User List</p>

    <div class="card m-2 p-2">

        <table class="table m-2">
            @foreach (var user in Model)
            {
                <tr>
                    <td style="font-size:1.3em;">@user.Email</td>
                    <td class="text-right">
                        <a class="btn btn-success" asp-action="Edit" asp-route-userid="@user.Id" style="font-size:1.3em;">Access rights</a>
                    </td>
                </tr>
            }
        </table>

    </div>
    <a asp-action="Index" class="btn btn-primary ml-2" style="font-size:1.3em;">Back</a>
</div>
